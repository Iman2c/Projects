<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlooringIconManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#57352B</item>
        <item name="colorPrimaryVariant">#835B4E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#EA7FA3</item>
        <item name="colorSecondaryVariant">#EA7FA3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FlooringIconManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FlooringIconManager.BackgroundImageStyle">
        <item name="android:windowBackground"> @drawable/background</item>
    </style>

    <style name="Theme.FlooringIconManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FlooringIconManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>